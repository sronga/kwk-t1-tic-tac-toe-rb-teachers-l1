#!/usr/bin/env ruby

require_relative '../lib/tic_tac_toe'

def play(board)
  counter = 0
  until counter == 9
  turn(board)
  counter += 1
  end
end

board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

allow($stdout).to receive(:puts)

allow(self).to receive(:over?).and_return(false, true)

expect(self).to receive(:gets).at_least(:once).and_return("1")
